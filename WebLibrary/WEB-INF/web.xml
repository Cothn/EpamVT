<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">


    <servlet>
        <servlet-name>PageEmployers</servlet-name>
        <jsp-file>/WEB-INF/jsp/employers.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>PageEmployers</servlet-name>
        <url-pattern>/employers</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>EmployersController</servlet-name>
      <servlet-class>controller.EmployerServlet</servlet-class>
   </servlet>

  <servlet-mapping>
    <servlet-name>EmployersController</servlet-name>
    <url-pattern>/ShowEmployers</url-pattern>
  </servlet-mapping>

    <servlet>
      <servlet-name>AuthorsController</servlet-name>
      <servlet-class>controller.AuthorServlet</servlet-class>
   </servlet>

  <servlet-mapping>
    <servlet-name>AuthorsController</servlet-name>
    <url-pattern>/ShowAuthors</url-pattern>
  </servlet-mapping>


    <servlet>
      <servlet-name>LibraryController</servlet-name>
      <servlet-class>controller.LibraryObjServlet</servlet-class>
   </servlet>
    
  <servlet-mapping>
    <servlet-name>LibraryController</servlet-name>
    <url-pattern>/ShowLibrary</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>PublHousesController</servlet-name>
        <servlet-class>controller.PublHousesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PublHousesController</servlet-name>
        <url-pattern>/ShowPublHouses</url-pattern>
    </servlet-mapping>
   
</web-app>